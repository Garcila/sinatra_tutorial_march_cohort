<h1>Messages</h1>
<a href="/.."><small>Home</a></small>
<a href="messages/new"><small>Post a message... Let it all out!</small></a>

<% @messages.each do |message| %>
	<div class="message">
		<h3></a> <small>(by: <%= message.author %>)</small></h3>
		<p>
			<%= message.content %>
		</p>
	</div>
<% end %>